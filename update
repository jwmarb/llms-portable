#!/bin/bash

# llama.cpp
(
  cd llama.cpp && \
  git checkout master && \
  git reset --hard && \
  git pull && \
  cmake -B build -DGGML_CUDA=ON -DGGML_CUDA_F16=ON -DGGML_CUDA_FA_ALL_QUANTS=ON && \
  cmake --build build --config Release --parallel $(nproc)
) &

# llama-swap
(
  cd llama-swap && \
  git checkout main && \
  git reset --hard && \
  git pull && \
  make clean all -j$(nproc)
) &

wait